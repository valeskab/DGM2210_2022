//Calculator

global proc MyCoolCalculator(float $input[] , int $operation)

{
    if ($operation == 1)
    {
        Sum($input);
    }
    else if ($operation == 2)
    {
        Subtract($input);
    }
    else if ($operation == 3)
    {
        Multiply($input);
    }
    else if ($operation == 4)
    {
        Divide($input);
    }
    else if ($operation == 5)
    {
        Power($input);
    }
    else if ($operation == 6)
    {
        Mean($input);
    }
    else if ($operation == 7)
    {
        Median($input);
    }
    else 
    {
        print ("Please input a valid operation type as a value from 1 - 7 (ex: 1 = addition)");
    }
}

